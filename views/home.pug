doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0', crossorigin='anonymous')
        link(rel='stylesheet', href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css', integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p', crossorigin='anonymous')
        link(rel="stylesheet", href="/style/style.css")
        title Web RTC
    body 
        h1.title Web RTC
        .container.content
            .video-stream
                video.video-stream__item#localStream 
                video.video-stream__item#remoteStream
                p.call__empty No Connection  
                button.call__leave-call 
                    i.fas.fa-phone-slash.call__leave-call-icon
                    | Leave call 
            .user-list
                .user-list__title User Online 
                ul.user-list__list 
        #modalCall.modal.fade(tabindex='-1',data-bs-keyboard="false",data-bs-backdrop="static")
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-header
                        h5.modal-title Incoming call
                        button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                    .modal-body
                        .call__content
                    .modal-footer
                        button.btn.btn-secondary.call__decline-btn(type='button', data-bs-dismiss='modal') Decline
                        button.btn.btn-primary.call__accept-btn(type='button') Accept
        script(src='https://code.jquery.com/jquery-3.6.0.min.js', integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8', crossorigin='anonymous')
        script(src="https://rtc-video-call.herokuapp.com/socket.io/socket.io.js")
        script(src='/javascript/simplepeer.min.js') 
        script(src="/javascript/main.js")